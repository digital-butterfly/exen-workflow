generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Etat {
  sourcing
  valid
  refused
  tenu_commite
}

model Admin {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  nom      String
  prenom   String
  cin      String @unique
  tel      String
  email    String @unique
  password String
  PDP      Pdp[]  @relation("AdminToPDP")
}

model Associe {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  nom      String
  prenom   String
  cin      String @unique
  tel      String
  email    String @unique
  password String
  PDP      Pdp[]  @relation("AssocieToPDP")
}

model Approbateur {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  nom      String
  prenom   String
  cin      String @unique
  tel      String
  email    String @unique
  password String
  PDP      Pdp[]  @relation("ApprobateurToPDP")
}

model Pdp {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  irchad_id           Int?
  nom                 String
  prenom              String
  sexe                String
  date_naissance      DateTime
  num_cin             String
  tel                 String
  email               String
  type_form_juridique String
  date_form_juridique DateTime
  region              String
  commune             String
  province            String

  nom_projet     String
  secteur_projet String

  experience_1 String?
  experience_2 String?
  experience_3 String?
  experience_4 String?
  experience_5 String?

  etat        Etat    @default(sourcing)
  commentaire String?

  doc_cin                       String?
  doc_cv                        String?
  doc_forme_juridique           String?
  doc_contrat_de_bail           String?
  doc_devis                     String?
  doc_attestation_rib           String?
  doc_diplome                   String?
  doc_attestation_stage_travail String?
  doc_bp                        String?
  doc_fiche_de_presence         String?

  AdminId Int?
  Admin   Admin? @relation("AdminToPDP", fields: [AdminId], references: [id])

  AssocieId Int?
  Associe   Associe? @relation("AssocieToPDP", fields: [AssocieId], references: [id])

  ApprobateurId Int?
  Approbateur   Approbateur? @relation("ApprobateurToPDP", fields: [ApprobateurId], references: [id])
}
